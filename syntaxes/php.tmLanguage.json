{
    "scopeName": "source.php",
    "patterns": [
      {
        "include": "text.html.basic"
      },
      {
        "include": "source.php.embedded.block"
      },
      {
        "begin": "(echo|print)\\s*(['\"])",
        "beginCaptures": {
          "1": { "name": "keyword.operator.echo.php" },
          "2": { "name": "punctuation.definition.string.begin.php" }
        },
        "end": "(['\"];)",
        "endCaptures": {
          "1": { "name": "punctuation.definition.string.end.php" }
        },
        "patterns": [
          {
            "begin": "['\"]",
            "end": "['\"]",
            "patterns": [
              {
                "include": "text.html.basic"
              },
              {
                "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*",
                "name": "variable.other.php"
              },
              {
                "match": "\\.",
                "name": "keyword.operator.concatenation.php"
              }
            ]
          }
        ]
      }
    ],
    "repository": {},
    "injections": {},
    "fileTypes": ["php"],
    "name": "PHP with HTML in echo"
  }
  